<div class="container">
    <div class="m-4 d-flex justify-content-center align-items-center" style="height: 830px;">
        <div class="card">
            <div class="card-header text-center">
                <div class="form-inline"><br>
                    <input type="button" value="Página anterior" onclick="history.go(-1);">
                </div>
                <h1>Información del extracto:</h1>
                <h5>{{note.cod}} {{note.title}}</h5>
            </div>

            <div class="card-body " data-aos="zoom-in-down" data-aos-duration="1000">
                
                <div class="wrap">
                    <ul class="tabs">
			            <li><a href="#tab1"><span class="tabtext">Datos Generales</span></a></li>
			            <li><a href="#tab2"><span class="tabtext">Características</span></a></li>
			            <li><a href="#tab3"><span class="tabtext">Mas información</span></a></li>
		            </ul>

                    <div class="secciones">

                        <article id="tab1" class="form-group">
				            <h3 class="text-center">Datos Generales</h3>

				            <div class="form-group">
                                <h5>Tipo de extracto:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.tipo}} </p>
                                </div> 
                            </div>
            
                            <div class="form-group">
                                <h5>Código:</h5>
                                <div class="col">
                                     <p class="form-control text-center">{{note.cod}} {{note.title}} </p>
                                </div>  
                            </div>

                            <div class="form-group">
                                <h5>Nombre del extracto:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.description}} </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Materia prima:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.materia}} </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Familia:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.familia}} </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Descripción</h5>
                                <div class="col">
                                    <textarea name="des" class="form-control text-center">{{note.des}}</textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Orígen:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.origen}} </p> 
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Propiedades Funcionales:</h5>
                                <div class="col">
                                    <textarea name="propiedades" class="form-control text-center">{{note.propiedades}}</textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <h5>Fórmula:</h5>
                                <div class="col">
                                    <textarea name="propiedades" class="form-control text-center">{{note.formula}}</textarea>
                                </div>
                            </div>
			            </article>


                        <article id="tab2">
				            <h3 class="text-center">Características</h3><hr>

				            <div class="form-group">
                                <h5>Color:</h5>
                                <div class="col">
                                    <span>Hexadecimal:</span>
                                    <p class="form-control text-center"> #{{note.color}} </p> 
                                </div>
                                <div class="col">
                                    <span>RGB:</span>
                                    <p class="form-control text-center"> ({{note.rgb}})</p>
                                </div> 
                            </div>

				            <div class="form-group">
                                <h5>Densidad:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.densidad}} {{note.unidad}}</p>
                                </div>  
                            </div>

				            <div class="form-group">
                                <h5>Índice de refracción:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.refraccion}} °brix</p>
                                </div> 
                            </div>

				            <div class="form-group">
                                <h5>Sólidos:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.solido}} %</p>
                                </div>  
                            </div>

				            <div class="form-group">
                                <h5>PH:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.ph}} </p>
                                </div>  
                            </div>

				            <div class="form-group">
                                <h5>Perfil lipíco:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.lipico}} ppm</p>
                                </div>
                            </div>
			            </article>


                        <article id="tab3">
				            <h3 class="text-center">Otros datos</h3>

				            <div class="form-group">
                                <h5>Modo de uso:</h5>
                                <div class="col">
                                    <p class="form-control text-center"> {{note.modo}} </p>
                                </div>
                            </div>

				            
				            <div class="form-group">
                                <h5>Precauciones</h5>
                                <div class="col">
                                    <label>Contradiciones y precauciones:</label>
                                    <textarea name="precauciones" class="form-control text-center">{{note.precauciones}}</textarea>
                                </div>
                            </div>

				
				            <div class="form-group">
                                <h5>Conclusiones:</h5>
                                <div class="col">
                                    <label>Recomendaciones y conclusiones:</label>
                                    <textarea name="coclusiones" class="form-control text-center">{{note.conclusiones}}</textarea>
                                </div>
                            </div>
			            </article>
                    </div>
                </div>

                <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js' type='text/javascript'></script>

                <script type="text/javascript">
                    $(document).ready(function(){
                    $('ul.tabs li a:first').addClass('active');
                    $('.secciones article').hide();
                    $('.secciones article:first').show();

                    $('ul.tabs li a').click(function() {
                        $('ul.tabs li a').removeClass('active');
                        $(this).addClass('active');
                        $('.secciones article').hide();

                        var activeTab = $(this).attr('href');
                        $(activeTab).show();
                        return false;
                        });
                    });
                </script>

                <script type="text/javascript">
                   $(document).ready(function(){
                       $('button.panel a').click(function(){
                            $('.secciones article').hide();

                            var push = $(this).attr('href');
                            $(push).show();
                            return false;
                       });
                   });
                </script>

                <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
                <script>
                    AOS.init();
                </script>
            </div>
        </div>
    </div>
 </div><br>
